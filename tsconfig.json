{
  "compilerOptions": {
    "target": "ES2020", // 或者 "ES6"
    "module": "ESNext", // 或者 "CommonJS"
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist", // 输出目录
    "rootDir": "./src", // 源代码目录
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": ["src/Main/**/*"],
  "exclude": ["node_modules"]
}
