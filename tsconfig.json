{
  "compilerOptions": {
    "rootDir": "./src", // 修改为 src 目录
    "target": "esnext", // 编译目标
    "module": "esnext", // 使用 ES 模块
    "lib": ["dom", "esnext"], // 使用 DOM 和 ESNext 库
    "jsx": "preserve", // 保留 JSX 语法
    "strict": true, // 启用所有严格类型检查选项
    "esModuleInterop": true, // 允许默认导入非 ES 模块
    "skipLibCheck": true, // 跳过库文件的类型检查
    "allowImportingTsExtensions": true,
    "forceConsistentCasingInFileNames": true, // 强制文件名一致性
    "moduleResolution": "node", // 使用 Node 模块解析策略
    "baseUrl": ".", // 基础路径
    "paths": {
      "@/*": ["src/*"] // 设置路径别名
    },
    "types": ["vite/client"], // 包含 Vite 和 Node 类型
    "noEmit": true // 不生成输出文件
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue" // 包含 Vue 文件
  ],
  "exclude": [
    "node_modules",
    "dist", // 排除构建输出目录
    "dist-vue",
    "dist-react"
  ]
}
